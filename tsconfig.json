{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": false,
      "outDir": "lib",
      "strict": false,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
    },
    "include": ["index.ts"],
    "exclude": ["node_modules"]
  }